<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="add reference between verification token and user" author="bas">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="VERIFICATION_TOKEN_WITH_USER_ID"
                                            foreignKeyTableName="user"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint constraintName="VERIFICATION_TOKEN_WITH_USER_ID"
                                 baseTableName="verificationToken"
                                 baseColumnNames="user_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>